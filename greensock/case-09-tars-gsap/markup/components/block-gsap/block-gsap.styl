*, *::before, *::after {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

ul, ol {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

html, body {
    width: 100%;
    height: 100%;
}

body {
    bg-svg($gsap-superhero)
    background-color: #000;
    background-position: 50% 50%;
    background-size: 60%;
}

.box {
    position: absolute;
    top: 50%;
    left: 15%;
    transform: translate(-15%, -50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.box-item {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin: 20px 0;
    background-color: greenyellow;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40px;
    border: 4px solid green;
}

