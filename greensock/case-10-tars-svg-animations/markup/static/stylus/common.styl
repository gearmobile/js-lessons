html
    width: 100%;
    height: 100%;

button
    cursor: pointer;

    &:focus
        outline: none;

.page
    width: 100%;
    height: 100%;
    background-color: lightgreen;
    position: relative;


    &::before
    &::after
        content: '';
        display: block;
        background-color: #fff;
        position: absolute;

    &::before
        width: 2px;
        height: 100%;
        top: 0;
        left: 50%;
        transform: translateX(-50%);

    &::after
        width: 100%;
        height: 2px;
        top: 50%;
        left: 0;
        transform: translateY(-50%);


.page__wrapper
    min-height 100%
    margin-bottom -50px


* html .page__wrapper
    height 100%

.page__buffer
    height 50px